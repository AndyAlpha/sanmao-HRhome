.card-box {
  position: absolute;
  z-index: 99;
  width: 100%;
  overflow: hidden;
}

.card-1 {
  width: 100%;
  padding-top: 50rpx;
  overflow: hidden;
}

page {
  /* overflow: hidden; */
  width: 100vw;
  background: #fff;
  position: relative;
}

.card-bg {
  background: linear-gradient(#faceb3, #f3a071);
  width: 1400rpx;
  margin-left: -700rpx;
  left: 50%;
  height: 35vh;
  border-radius: 0 0rpx 50% 50%;
  position: absolute;
}

.v-title {
  font-size: 50rpx;
  font-weight: 600;
  color: #9e5832;
  text-shadow: 0 0 10rpx #df590b5b;
}

.icon-jiav, .icon-youxiansousuo, .icon-youxianxianshi {
  font-size: 80rpx;
  color: #be3803;
}

.row-title {
  margin-top: -30rpx;
}

.item {
  font-size: 26rpx;
}

title .color-column {
  background: #fc5f05;
}

.approve {
  background: #ffa977;
}

title {
  margin-top: -20rpx;
}

