/* pages/answerQuestion/answerQuestion.wxss */
.tabs{
  background-color: #fff;
  display: flex;
  width: 100%;
  height:90rpx;

}
.answer{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center
}

.question{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center
}
.default_text{
  font-size:32rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height:45rpx;
  height: 100%;
  display: flex;
  align-items: center
}
.actived_text{
  font-size:32rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:#4C89FB;
  line-height:45rpx;
  height: 100%;
  align-items: center;
  display: flex;
  border-bottom: 6rpx solid #4C89FB
}
.applyArea{
  height: 231rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column

}
.applyArea text{
  margin-top: 20rpx;
  font-size:28rpx;
font-family:PingFang-SC-Medium;
font-weight:500;
color:rgba(153,153,153,1);
line-height:40rpx;
}
.applyAnswer{
  width:300rpx;
  height:90rpx;
  background:rgba(76,137,251,1);
  border-radius:10rpx;
  font-size:32rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(255,255,255,1);
  line-height:45rpx;
  display: flex;
  justify-content: center;
  align-items: center
}