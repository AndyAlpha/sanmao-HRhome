.row-between{
    background:#fff;
}
.blue-section{
    color:#4c89fb;
    padding:10rpx 30rpx;
    border:1rpx #4c89fb solid;
    border-radius: 6rpx;
}
.title{
    font-size: 30rpx;
    min-width:23%;
    margin-right: 30rpx;
}
.time-section{
    width:50rpx;
    height:45rpx;
    background:#f1f1f1;
    border-radius: 8rpx;
    text-align: center;
    line-height: 45rpx;
    color:gray;
    font-size: 24rpx;
}
.middle{
    margin:0 25rpx;
}
.year{
    width:80rpx;
}
.time-line{
    height:4rpx;
    border-radius: 8rpx;
    width:15rpx;
    background: #4c89fb;
    margin:0 15rpx;
}
.row-start{
    background: #fff;
}
.timer{
    width:50rpx;
}
.timer:first-child{
    margin-left:50rpx;
}
.time-section-time{
    margin:0 15rpx;
    font-weight: 600;
    color:#4c89fb;
    font-size: 34rpx;
}
selectRow .row-between{
    justify-content: flex-start
}
selectRow .necessary{
    font-weight: 600;
}
selectRow .icon-right{
    opacity: 0;
}
selectRow picker{
    width:70%;
}
selectRow .row{
    width:23%
}

page{
    padding-bottom: 200rpx;
    background:#fff;
}
.fix-buttons{
    z-index:999;
    height:110rpx;
}
.fix-buttons button{
  line-height: 110rpx;
}
.preview{
  color:#4c89fb!important;
}
.tjzp{
    width:150rpx;
    height:150rpx;
}
textarea{
    border:0.1rpx #b1b1b1 solid;
    background:#F9F9FA;
    width:100%;
    height:300rpx;
    padding:20rpx;
    box-sizing:border-box;

}
.wrap{
    flex-wrap: wrap
}
.image-item{
    margin:3rpx;
    border-radius:5rpx;
}
.image-item image{
    width:150rpx;
    height:150rpx;
    
}
