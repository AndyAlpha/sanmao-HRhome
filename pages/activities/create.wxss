.bg{
    background:rgba(76, 137, 251,0.1);
    position: absolute;
    border-radius: 8rpx;
    width:100%;
    height:100%
}
.column-bg{
    width:100%;
    height:100%;
    position: relative;
    color:#4c89fb;
}
.m-30,.row-picker{
  margin:0 40rpx 0 30rpx;
}
.sky_9 .row-picker{
  margin:0;
}
.sky_9 .necessary{
  margin-left: 8rpx
}
.sky_9 .picker-text{
  padding-left: 22rpx
}
.row-picker{
  width:auto!important;
}
.type{
font-size:30rpx!important;
  display:-webkit-box;
-webkit-box-orient:vertical;
-webkit-line-clamp:1;
overflow:hidden;

}
.photo-icon{
    width:81rpx;
    height:52rpx;
    margin-bottom: 20rpx;
}
.size-1{
  padding: 27rpx 40rpx;
}
.cover{
    width:100%;
    height:300rpx;
    border-radius: 8rpx;
}
