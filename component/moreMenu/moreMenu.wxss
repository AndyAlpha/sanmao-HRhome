/* component/moreMenu/moreMenu.wxss */
.more-menu{
  position: relative;
}
.menu{
width:30rpx;
height:30rpx;
}
.menu-box{
  display: flex;
  width: 300rpx;
  flex-direction: column;
  border: 1.5rpx solid lightgray;
  border-radius: 6rpx;
  background: #fff;
  z-index: 1000;
  position: absolute;
  top:20rpx;
  right:50rpx;
  box-shadow: 0 5rpx 10rpx rgba(27, 15, 59, 0.1);
}
.menu-box-bottom{
  display: flex;
  width: 300rpx;
  flex-direction: column;
  border: 1.5rpx solid lightgray;
  border-radius: 6rpx;
  background: #fff;
  z-index: 1000;
  position: absolute;
  bottom:40rpx;
  right:70rpx;
  box-shadow: 0 5rpx 10rpx rgba(27, 15, 59, 0.1);
}
.menu-box-1{
  display: flex;
  flex-direction: column;
  border-bottom: 1.5rpx solid lightgray;
  padding:20rpx 40rpx;
  box-sizing: border-box;
  color: gray;
  font-size: 28rpx;
  text-align: center;
}

.menu-box .menu-box-1:last-of-type{
  border-bottom:0;
}
.mask-menu{
  width:100%;
  height:100%;
  position: fixed;
  top:0;
  left:0;
  z-index:999
}
button{
  border:0;
  padding:0;
  margin:0;
  line-height:initial;
  font-size: 28rpx;
  color:gray;
  background:#fff;

}
button::after{
  border:0
}
button::before{
  border:0
}