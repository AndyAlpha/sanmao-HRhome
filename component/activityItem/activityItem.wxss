.activity-box {
  background: #fff;
}

.activity-title {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size: 28rpx;
  font-weight: bold;
  line-height: 40rpx;
}

.activity-ttimeitle, .activity-address {
  font-size: 26rpx;
  font-weight: 500;
  line-height: 40rpx;
  color: #666;
}

.activity-image {
  width: 180rpx;
  height: 220rpx;
  /* border-radius: 10rpx; */
}

