.column-1 {
  margin-left: 20rpx;
  font-size: 28rpx;
  line-height: 70rpx;
}

.status {
  color: #4c89fb;
  font-weight: 500;
}

.price {
  font-size: 34rpx;
  font-weight: bold;
  color: #4c89fb;
  margin-top: 10rpx;
}

.price text {
  font-size: 26rpx;
}

.pay-button {
  padding: 10rpx 20rpx;
  border-radius: 40rpx;
  border: 0.1rpx solid #dcdde3;
  margin-left: 20rpx;
  background: #fff;
  color: inherit;
  line-height: inherit;
  font-size: 28rpx;
}

.hover {
  background: #eaeaea;
}

.row {
  align-items: flex-start;
}

.act-info {
  display: flex;
  flex-direction: row;
}
